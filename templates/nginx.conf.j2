events {
    worker_connections 768;
}

http {
    sendfile on;
    keepalive_timeout 65;

    server {
        listen {{ http_port }};
        server_name localhost;

        location / {
            root /usr/share/nginx/html;
            index index.html index.htm;
        }

        error_page 500 502 503 504 /50x.html;
        location = /50x.html {
            root /usr/share/nginx/html;
        }
    }
} 